{
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-param-reassign": "off",
    "max-len": ["error", 100, 2, { "ignoreUrls": true, "ignoreComments": true }],
    "no-restricted-syntax": "off"
  },
  "extends": ["airbnb-base", "prettier"],
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  }
}
